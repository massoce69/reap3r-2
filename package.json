{
  "name": "massvision-reap3r",
  "version": "1.0.0",
  "private": true,
  "description": "MASSVISION Reap3r â€” Enterprise Agent-Driven Remote Management Platform",
  "workspaces": [
    "shared",
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm -w backend run dev",
    "dev:frontend": "npm -w frontend run dev",
    "build": "npm -w shared run build && npm -w backend run build && npm -w frontend run build",
    "lint": "npm -w shared run lint && npm -w backend run lint && npm -w frontend run lint",
    "test": "npm -w backend run test",
    "test:e2e": "npm -w backend run test:e2e",
    "agent:sim": "npm -w backend run agent:sim",
    "db:migrate": "npm -w backend run db:migrate",
    "docker:dev": "docker compose -f docker-compose.yml up --build",
    "docker:prod": "docker compose -f docker-compose.prod.yml up -d --build"
  },
  "devDependencies": {
    "@types/ws": "^8.18.1",
    "concurrently": "^9.1.0",
    "typescript": "^5.6.0"
  }
}
